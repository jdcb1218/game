/**
 * Implements hook_uninstall().
 */
function trivia_uninstall() {
  db_drop_table('quiz_starts_duplas');
  db_drop_table('quiz_node_results_competition');
  return drupal_set_message(t('Uninstall Module @trivia'), 'status', TRUE);
}

